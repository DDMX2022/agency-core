{
  "name": "agency-core",
  "version": "0.1.0",
  "description": "OpenClaw-style multi-agent agency with a child-like Learner at the core",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "example": "tsx src/cli/example-run.ts",
    "bot:telegram": "tsx src/bot/telegram.ts"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "fastify": "^5.2.1",
    "grammy": "^1.40.0",
    "openai": "^6.21.0",
    "pino": "^9.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.0.5"
  }
}
